<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/IndigoDye"
    android:foregroundTint="@color/white"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_buscarArtista"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:hint="Artista"
        android:imeOptions="normal"
        android:inputType="textPersonName"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_canciones"
        app:layout_constraintEnd_toStartOf="@+id/btn_buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="63dp"
        android:text=">"
        android:textSize="30sp"
        android:backgroundTint="@color/Jet"
        app:layout_constraintBottom_toTopOf="@+id/lv_canciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_buscarArtista"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_canciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="73dp"
        android:divider="@color/Jet"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_buscar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="Lista de Canciones"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/lv_canciones"
        app:layout_constraintStart_toStartOf="@+id/lv_canciones"
        app:layout_constraintTop_toBottomOf="@+id/et_buscarArtista"
        app:layout_constraintVertical_bias="0.472" />
</androidx.constraintlayout.widget.ConstraintLayout>